<% include layouts/header %>

    <div class="container-fluid welcome_container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-8 col-sm-offset-8 col-md-offset-8 text-right">
                <div class="links">
                    <a href=""><%= site.title %></a>
                </div>
            </div>
        </div>
        <div class="row register">
            <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-4 col-sm-offset-4 col-md-offset-4">
                <%if (error.length > 0) {%>
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <strong><%= error %></strong>
                </div>
                <% } %>
                <form action="/accounts/register" method="POST" role="form" class="login-form">
                    <legend class="text-center">CREATE AN ACCOUNT</legend>
                
                    <div class="form-group">
                        <label for="">Register Number</label>
                        <input type="text" class="form-control" name="username" placeholder="15TUCS215" onkeyup="return forceUpper(this);" maxlength="9" required>
                    </div>

                    <div class="form-group">
                        <label for="">Fullname</label>
                        <input type="text" class="form-control" name="name" placeholder="Satheesh Kumar D" onkeyup="return forceUpper(this);" required>
                    </div>

                    <div class="form-group">
                        <label for="">College Email</label>
                        <input type="email" class="form-control" name="email" placeholder="admin@skct.edu.in" onkeyup="return forceLower(this);" required>
                    </div>

                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" class="form-control" name="password" minlength="8" placeholder="Must contain min 8 chars" required>
                    </div>
                    
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Register</button>
                        <a class="btn btn-danger" href="/accounts/login">Login</a>
                    </div>

                    <script>
                        function forceUpper(input){
                            input.value = input.value.toUpperCase();
                        }

                        function forceLower(input){
                            input.value = input.value.toLowerCase();
                        }
                    </script>

                </form>
                                
            </div>
        </div>
    </div>
    <div class="count-down text-right" id="count">1000</div>
<% include layouts/javascripts %>
    <script type="text/javascript">
        $.get('/accounts/count', function(data, status){
            var dt = ('0000'+ data).substring(data.length);
            $("#count").html(dt);
        });
        $('form').submit(function(){
            $("button[type='submit']").attr('disabled', 'disabled');
            $("button[type='submit']").html('Creating  User...');
        });
    </script>
<% include layouts/footer %>
