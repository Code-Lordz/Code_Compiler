<% include layouts/header %>

    <div class="container-fluid welcome_container">
        <div class="row login">
            <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-4 col-sm-offset-4 col-md-offset-4">
                <% if(query.errorcode == '10') { %>
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    Invalid Username/Password
                </div>
                <% } %>
                <form action="/accounts/login" method="POST" role="form" class="login-form">
                    <h2 class="text-center"><i class="glyphicon glyphicon-fire"></i></h2>
                    <legend class="text-center">Welcome to CodeLordz</legend>
                    <br>
                    <div class="group">      
                        <input type="text" required="" name="username" style="background: transparent;"  onkeyup="return forceUpper(this);" maxlength="9">
                        <span class="highlight"></span>
                        <span class="bar"></span>
                        <label>Register Number</label>
                    </div>
                
                    <div class="group">      
                        <input type="password" required="" name="password" style="background: transparent;" minlength="8">
                        <span class="highlight"></span>
                        <span class="bar"></span>
                        <label>Password</label>
                    </div>
                    
                    <br><br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a class="btn btn-danger" href="/accounts/register">Register</a>
                    </div>
                    
                    <script>
                        function forceUpper(input){
                            input.value = input.value.toUpperCase();
                        }
                    </script>

                </form>
            </div>
        </div>
    </div>
    <div class="count-down text-right" id="count">1000</div>
<% include layouts/javascripts %>
    <script type="text/javascript">
        $.get('/accounts/count', function(data, status){
            var dt = ('0000'+ data).substring(data.length);
            $("#count").html(dt);
        });
        $('form').submit(function(){
            $("button[type='submit']").attr('disabled', 'disabled');
            $("button[type='submit']").html('Logging in...');
        });
    </script>
<% include layouts/footer %>
